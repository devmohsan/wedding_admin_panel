<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lezzetli App | Menu Item</title>
  <link rel="stylesheet" href="/css/output.css">
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body class="bg-gray-50">
  <div class="flex h-screen overflow-hidden">
    <%- include('partials/sidebar') %>

      <div class="relative flex flex-col flex-1 overflow-x-hidden overflow-y-auto">
        <%- include('partials/header') %>

          <main class="flex-1 overflow-y-auto p-6">
            <div class="max-w-4xl mx-auto">
              <!-- Form Card -->
              <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden">
                <!-- Header -->
                <div class="bg-gradient-to-r from-[#2B588D] to-[#5FA8A1] px-6 py-4">
                  <div class="flex items-center justify-between">
                    <div>
                      <h2 class="text-2xl font-bold text-white">
                        <%= mode==='edit' ? 'Edit Menu Item' : 'Add New Menu Item' %>
                      </h2>
                      <p class="text-white/90 text-sm mt-1">
                        <%= mode==='edit' ? 'Update existing menu item details' : 'Add a new item to your menu' %>
                      </p>
                    </div>
                    <div class="flex items-center space-x-2">
                      <span class="px-3 py-1 bg-white/20 rounded-full text-xs font-medium text-white">
                        <%= mode==='edit' ? 'Edit Mode' : 'Create Mode' %>
                      </span>
                    </div>
                  </div>
                </div>

                <!-- Form Content -->
                <div class="p-6">
                  <form method="POST"
                    action="<%= mode === 'edit' ? '/menu_items/edit/' + (pack.id || '') : '/menu_items/add' %>">
                    <!-- Hidden ID Field -->
                    <input type="hidden" name="id" value="<%= pack.id || '' %>" />

                    <!-- Grid Layout -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

                      <!-- Left Column -->
                      <div class="space-y-6">
                        <!-- Name -->
                        <div>
                          <label class="block text-sm font-semibold text-gray-700 mb-2">
                            Item Name <span class="text-red-500">*</span>
                          </label>
                          <input type="text" name="name" value="<%= pack.name || '' %>" required
                            placeholder="e.g., Chicken Biryani"
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#66BE6E] focus:border-transparent transition-all duration-200">
                        </div>

                        <!-- Description -->
                        <div>
                          <label class="block text-sm font-semibold text-gray-700 mb-2">
                            Description
                          </label>
                          <textarea name="description" rows="3" placeholder="Describe your delicious dish..."
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#66BE6E] focus:border-transparent transition-all duration-200 resize-none"><%= pack.description || '' %></textarea>
                        </div>

                        <!-- Allergens (Array) -->
                        <!-- Allergens (Array) -->
                        <div>
                          <label class="block text-sm font-semibold text-gray-700 mb-2">
                            Allergens
                          </label>
                          <!-- Container for the tags and input -->
                          <div id="allergens-tags-wrapper"
                            class="w-full min-h-[52px] px-3 py-2 border border-gray-300 rounded-lg focus-within:outline-none focus-within:ring-2 focus-within:ring-[#66BE6E] focus-within:border-transparent transition-all duration-200 cursor-text bg-white">
                            <!-- Tags will be rendered here by JavaScript -->
                            <div id="allergens-tags-container" class="flex flex-wrap gap-2 mb-2"></div>
                            <!-- Hidden input to store the final comma-separated value for form submission -->
                            <input type="hidden" name="allergens" id="allergens-value"
                              value="<%= Array.isArray(pack.allergens) ? pack.allergens.join(',') : pack.allergens || '' %>">
                            <!-- Visible input for typing new tags -->
                            <input type="text" id="allergens-input"
                              placeholder="Type an allergen and press Enter or comma..."
                              class="flex-grow border-0 focus:outline-none focus:ring-0 w-full px-0">
                          </div>
                          <p class="text-xs text-gray-500 mt-1">Press Enter or comma (,) to add a tag. Click the Ã— to
                            remove.</p>
                        </div>  

                        <!-- Image URL -->
                        <div>
                          <label class="block text-sm font-semibold text-gray-700 mb-2">
                            Image
                          </label>
                          <input type="file" name="image" value="<%= pack.image || '' %>"
                            placeholder="https://example.com/image.jpg"
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#66BE6E] focus:border-transparent transition-all duration-200">
                        </div>
                      </div>

                      <!-- Right Column -->
                      <div class="space-y-6">
                        <!-- Price -->
                        <div>
                          <label class="block text-sm font-semibold text-gray-700 mb-2">
                            Price ($) <span class="text-red-500">*</span>
                          </label>
                          <div class="relative">
                            <span class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-500">$</span>
                            <input type="number" name="price" value="<%= pack.price || '' %>" required step="0.01"
                              placeholder="0.00"
                              class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#66BE6E] focus:border-transparent transition-all duration-200">
                          </div>
                        </div>

                        <!-- Calories -->
                        <div>
                          <label class="block text-sm font-semibold text-gray-700 mb-2">
                            Calories
                          </label>
                          <div class="relative">
                            <input type="number" name="calories" value="<%= pack.calories || '' %>"
                              placeholder="e.g., 200"
                              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#66BE6E] focus:border-transparent transition-all duration-200">
                            <span class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-500">cal</span>
                          </div>
                        </div>

                        <!-- Type (Veg/Non-Veg) -->
                        <div>
                          <label class="block text-sm font-semibold text-gray-700 mb-2">
                            Food Type <span class="text-red-500">*</span>
                          </label>
                          <div class="grid grid-cols-2 gap-3">
                            <label
                              class="flex items-center space-x-3 p-3 border rounded-lg cursor-pointer hover:bg-gray-50 transition-colors <%= pack.type === 'veg' ? 'border-[#66BE6E] bg-green-50' : 'border-gray-300' %>">
                              <input type="radio" name="type" value="veg" <%=pack.type==='veg' ? 'checked' : '' %>
                              required
                              class="h-4 w-4 text-[#66BE6E] focus:ring-[#66BE6E]">
                              <div class="flex items-center space-x-2">
                                <div class="w-3 h-3 bg-red-500 rounded-full"></div>
                                <span class="font-medium">Vegetarian</span>
                              </div>
                            </label>
                            <label
                              class="flex items-center space-x-3 p-3 border rounded-lg cursor-pointer hover:bg-gray-50 transition-colors <%= pack.type === 'non-veg' ? 'border-[#66BE6E] bg-green-50' : 'border-gray-300' %>">
                              <input type="radio" name="type" value="non-veg" <%=pack.type==='non-veg' ? 'checked' : ''
                                %> required
                              class="h-4 w-4 text-[#66BE6E] focus:ring-[#66BE6E]">
                              <div class="flex items-center space-x-2">
                                <div class="w-3 h-3 bg-green-500 rounded-full"></div>
                                <span class="font-medium">Non-Vegetarian</span>
                              </div>
                            </label>
                          </div>
                        </div>

                        <!-- Active Status -->
                        <div>
                          <label class="block text-sm font-semibold text-gray-700 mb-2">
                            Status
                          </label>
                          <label
                            class="flex items-center space-x-3 p-4 border rounded-lg cursor-pointer hover:bg-gray-50 transition-colors <%= pack.is_active ? 'border-[#66BE6E] bg-green-50' : 'border-gray-300' %>">
                            <input type="checkbox" name="is_active" value="true" <%=pack.is_active ? 'checked' : '' %>
                            class="h-4 w-4 text-[#66BE6E] rounded focus:ring-[#66BE6E]">
                            <div class="flex-1">
                              <div class="font-medium text-gray-800">Active Item</div>
                              <div class="text-sm text-gray-500">Item will be visible on the menu</div>
                            </div>
                            <div
                              class="px-2 py-1 text-xs font-medium rounded-full <%= pack.is_active ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                              <%= pack.is_active ? 'Active' : 'Inactive' %>
                            </div>
                          </label>
                        </div>
                      </div>
                    </div>

                    <!-- Form Actions -->
                    <div class="mt-8 pt-6 border-t border-gray-200 flex items-center justify-between">
                      <div>
                        <a href="/menu_items"
                          class="flex items-center space-x-2 text-gray-600 hover:text-gray-800 transition-colors duration-200">
                          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                          </svg>
                          <span class="font-medium">Back to Menu Items</span>
                        </a>
                      </div>
                      <div class="flex items-center space-x-4">
                        <button type="submit"
                          class="px-8 py-3 bg-gradient-to-r from-[#2B588D] to-[#5FA8A1] text-white font-semibold rounded-lg hover:opacity-90 transition-all duration-200 shadow-md hover:shadow-lg transform hover:-translate-y-0.5">
                          <%= mode==='edit' ? 'Update Item' : 'Create Item' %>
                            <svg class="inline-block w-4 h-4 ml-2" fill="none" stroke="currentColor"
                              viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                            </svg>
                        </button>
                      </div>
                    </div>
                  </form>
                </div>

                <!-- Form Footer Note -->
                <div class="bg-gray-50 px-6 py-4 border-t border-gray-200">
                  <div class="flex items-center text-sm text-gray-500">
                    <svg class="w-4 h-4 mr-2 text-[#66BE6E]" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd"
                        d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"
                        clip-rule="evenodd" />
                    </svg>
                    Fields marked with <span class="text-red-500">*</span> are required
                  </div>
                </div>
              </div>
            </div>
          </main>

      </div>
  </div>

  <%- include('partials/script') %>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
        const wrapper = document.getElementById('allergens-tags-wrapper');
        const input = document.getElementById('allergens-input');
        const container = document.getElementById('allergens-tags-container');
        const hiddenInput = document.getElementById('allergens-value');

        // Load existing tags from the hidden input on page load (for edit mode)
        let tags = hiddenInput.value ? hiddenInput.value.split(',').filter(tag => tag.trim() !== '') : [];
        renderTags();

        // Function to update the hidden input and re-render tags
        function updateTags() {
            hiddenInput.value = tags.join(',');
            renderTags();
        }

        // Function to render all tags in the container
        function renderTags() {
            container.innerHTML = '';
            tags.forEach((tag, index) => {
                // Create a tag element
                const tagEl = document.createElement('div');
                tagEl.className = 'inline-flex items-center px-3 py-1.5 bg-gray-100 text-gray-800 text-sm font-medium rounded-full border border-gray-200';

                // Tag text
                const tagText = document.createElement('span');
                tagText.textContent = tag;
                tagEl.appendChild(tagText);

                // Remove button
                const removeBtn = document.createElement('button');
                removeBtn.type = 'button';
                removeBtn.innerHTML = '&times;';
                removeBtn.className = 'ml-1.5 text-gray-500 hover:text-red-600 text-lg font-bold leading-none focus:outline-none';
                removeBtn.addEventListener('click', (e) => {
                    e.stopPropagation();
                    tags.splice(index, 1);
                    updateTags();
                    input.focus();
                });

                tagEl.appendChild(removeBtn);
                container.appendChild(tagEl);
            });
        }

        // Function to add a new tag
        function addTag(tagText) {
            const trimmedTag = tagText.trim();
            if (trimmedTag && !tags.includes(trimmedTag)) { // Prevent empty/duplicate tags
                tags.push(trimmedTag);
                updateTags();
                input.value = '';
            }
        }

        // Event: Add tag on pressing Enter or comma
        input.addEventListener('keydown', (e) => {
            if (e.key === 'Enter' || e.key === ',') {
                e.preventDefault();
                addTag(input.value);
            }
        });

        // Event: Also add tag when the input loses focus (optional behavior)
        input.addEventListener('blur', () => {
            if (input.value.trim()) {
                addTag(input.value);
            }
        });

        // Focus the input when clicking anywhere in the wrapper
        wrapper.addEventListener('click', () => input.focus());
    });
</script>
</body>

</html>