<div id="sidebar"
  class="w-64 bg-white h-screen flex flex-col shadow-2xl border-r border-[#F3C7BF]/20 transition-all duration-300 ease-in-out z-40 fixed md:relative -ml-64 md:ml-0">
  <!-- Sidebar Header -->
  <div class="p-6 border-b border-gray-100 flex items-center justify-center">
    <h2 class="text-2xl font-extrabold tracking-tight">
      <span class="bg-clip-text text-transparent bg-gradient-to-r from-[#F3C7BF] to-[#FF5E62]">
        Wedding
      </span>
      <span class="text-xl align-middle animate-pulse ml-1">❤️</span>
    </h2>
  </div>

  <!-- Navigation Links -->
  <nav class="flex-1 p-4 space-y-3 overflow-y-auto custom-scrollbar">

    <!-- Dashboard -->
    <a href="/dashboard"
      class="flex items-center px-4 py-3.5 text-sm font-semibold rounded-xl group hover:bg-[#F3C7BF]/10 transition-all duration-200 hover:translate-x-1">
      <div
        class="mr-3 p-2 bg-gray-50 text-gray-400 rounded-lg group-hover:bg-[#F3C7BF]/20 group-hover:text-[#FF5E62] transition-colors shadow-sm">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"
          stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round"
            d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
        </svg>
      </div>
      <span class="text-gray-600 group-hover:text-[#FF5E62]">Dashboard</span>
    </a>

    <!-- Users -->
    <a href="/users"
      class="flex items-center px-4 py-3.5 text-sm font-semibold rounded-xl group hover:bg-[#F3C7BF]/10 transition-all duration-200 hover:translate-x-1">
      <div
        class="mr-3 p-2 bg-gray-50 text-gray-400 rounded-lg group-hover:bg-[#F3C7BF]/20 group-hover:text-[#FF5E62] transition-colors shadow-sm">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"
          stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round"
            d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
        </svg>
      </div>
      <span class="text-gray-600 group-hover:text-[#FF5E62]">Couples</span>
    </a>

    <!-- Users -->
    <a href="/users/guests"
      class="flex items-center px-4 py-3.5 text-sm font-semibold rounded-xl group hover:bg-[#F3C7BF]/10 transition-all duration-200 hover:translate-x-1">
      <div
        class="mr-3 p-2 bg-gray-50 text-gray-400 rounded-lg group-hover:bg-[#F3C7BF]/20 group-hover:text-[#FF5E62] transition-colors shadow-sm">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"
          stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round"
            d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
        </svg>
      </div>
      <span class="text-gray-600 group-hover:text-[#FF5E62]">Guests</span>
    </a>

  </nav>

  <!-- Sidebar Footer -->
  <div class="p-4 border-t border-gray-100">
    <div
      class="flex items-center space-x-3 p-3 rounded-xl bg-gray-50 hover:bg-[#F3C7BF]/10 transition-colors duration-200 cursor-default group">
      <div
        class="h-10 w-10 rounded-full bg-gradient-to-r from-[#F3C7BF] to-[#FF5E62] flex items-center justify-center text-white font-bold text-sm shadow-md ring-2 ring-white">
        <%= admin.name.charAt(0).toUpperCase() %>
      </div>
      <div class="flex-1 min-w-0">
        <p class="text-sm font-bold text-gray-800 truncate group-hover:text-[#FF5E62] transition-colors">
          <%= admin.name %>
        </p>
        <p class="text-xs text-gray-500 flex items-center mt-0.5">
          <span class="w-1.5 h-1.5 bg-green-500 rounded-full mr-1.5 animate-pulse"></span>
          Online
        </p>
      </div>
    </div>
  </div>
</div>