<div
  class="bg-white/80 backdrop-blur-md shadow-sm px-6 py-4 flex items-center justify-between rounded-xl border border-white/20 relative z-30 transition-all duration-300">
  <!-- Left: Hamburger + Title (Mobile) -->
  <div class="flex items-center space-x-4">
    <!-- Hamburger Menu Button for Mobile/Sidebar Toggle -->
    <button id="sidebarToggle"
      class="md:hidden p-2 rounded-lg hover:bg-gray-100/80 hover:text-[#FF5E62] text-gray-600 transition-colors duration-200">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"
        stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>

    <!-- Desktop Toggle Button -->
    <button id="sidebarToggleDesktop"
      class="hidden md:block p-2 rounded-lg hover:bg-[#F3C7BF]/10 hover:text-[#FF5E62] text-gray-500 transition-colors duration-200">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"
        stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M11 17l-5-5m0 0l5-5m-5 5h12" />
      </svg>
    </button>

    <div>
      <h1 class="text-xl font-bold tracking-tight text-gray-800 md:hidden">
        <span class="bg-clip-text text-transparent bg-gradient-to-r from-[#F3C7BF] to-[#FF5E62]">
          Wedding Panel
        </span>
      </h1>
      <h1 class="text-xl font-bold tracking-tight text-gray-800 hidden md:block">
        Dashboard Overview
      </h1>
      <p class="text-xs text-gray-500 hidden md:block">Manage your wedding application</p>
    </div>
  </div>

  <!-- Right: Admin Dropdown -->
  <div class="relative">
    <button id="adminDropdownBtn"
      class="flex items-center space-x-3 group focus:outline-none transition-all duration-200 hover:opacity-80">
      <div class="text-right hidden md:block">
        <p class="text-sm font-semibold text-gray-800 group-hover:text-[#FF5E62] transition-colors">
          <%= admin.name %>
        </p>
        <p class="text-xs text-gray-500">Admin</p>
      </div>
      <div
        class="relative h-10 w-10 rounded-full bg-gradient-to-r from-[#F3C7BF] to-[#FF5E62] flex items-center justify-center text-white font-bold text-sm shadow-md ring-2 ring-white group-hover:ring-[#F3C7BF]/50 transition-all">
        <%= admin.name.charAt(0).toUpperCase() %>
      </div>
      <svg class="w-4 h-4 text-gray-400 group-hover:text-[#FF5E62] transition-colors duration-200 hidden md:block"
        fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
      </svg>
    </button>

    <!-- Dropdown Menu -->
    <div id="adminDropdownMenu"
      class="absolute right-0 mt-3 w-56 bg-white border border-gray-100 rounded-xl shadow-[0_10px_40px_-10px_rgba(0,0,0,0.08)] py-2 hidden z-50 divide-y divide-gray-50 transition-all duration-200 origin-top-right transform opacity-0 scale-95">
      <div class="px-4 py-3">
        <p class="text-sm font-bold text-gray-900">
          <%= admin.name %>
        </p>
        <p class="text-xs text-gray-500 truncate mt-0.5">
          <%= admin.email %>
        </p>
      </div>
      <div>
        <form method="POST" action="/logout" class="block">
          <button type="submit"
            class="w-full text-left px-4 py-2.5 text-sm text-gray-600 hover:bg-red-50 hover:text-red-500 transition-all duration-150 flex items-center space-x-2 group mx-1 rounded-lg">
            <svg class="w-4 h-4 text-gray-400 group-hover:text-red-500 transition-colors" fill="none"
              stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round"
                d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
            </svg>
            <span class="font-medium">Sign out</span>
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  const dropdownBtn = document.getElementById('adminDropdownBtn');
  const dropdownMenu = document.getElementById('adminDropdownMenu');
  const sidebarToggle = document.getElementById('sidebarToggle');
  const sidebarToggleDesktop = document.getElementById('sidebarToggleDesktop');

  // Toggle dropdown
  if (dropdownBtn) {
    dropdownBtn.addEventListener('click', function (e) {
      e.stopPropagation();
      const isHidden = dropdownMenu.classList.contains('hidden');

      if (isHidden) {
        dropdownMenu.classList.remove('hidden', 'opacity-0', 'scale-95');
        dropdownMenu.classList.add('opacity-100', 'scale-100');
      } else {
        dropdownMenu.classList.add('opacity-0', 'scale-95');
        dropdownMenu.classList.remove('opacity-100', 'scale-100');
        setTimeout(() => {
          dropdownMenu.classList.add('hidden');
        }, 200);
      }
    });
  }

  // Close dropdown on click outside
  document.addEventListener('click', function (e) {
    if (dropdownMenu && !dropdownMenu.classList.contains('hidden') && !dropdownBtn.contains(e.target)) {
      dropdownMenu.classList.add('opacity-0', 'scale-95');
      dropdownMenu.classList.remove('opacity-100', 'scale-100');
      setTimeout(() => {
        dropdownMenu.classList.add('hidden');
      }, 200);
    }
  });

  // Sidebar toggle functionality
  function toggleSidebar() {
    const sidebar = document.getElementById('sidebar');
    if (!sidebar) return;

    const isMobile = window.innerWidth < 768;

    if (isMobile) {
      // Mobile Logic: Toggle -ml-64 to show/hide
      // Default is hidden (-ml-64)
      if (sidebar.classList.contains('-ml-64')) {
        // Open Sidebar
        sidebar.classList.remove('-ml-64');
      } else {
        // Close Sidebar
        sidebar.classList.add('-ml-64');
      }
    } else {
      // Desktop Logic: Toggle md:ml-0 and -ml-64
      // Default is visible (md:ml-0 present, -ml-64 present but overridden)

      // Check if open by checking if md:ml-0 is present
      const isOpen = sidebar.classList.contains('md:ml-0');

      if (isOpen) {
        // Close Sidebar
        sidebar.classList.remove('md:ml-0'); // Remove desktop visibility override
        sidebar.classList.add('-ml-64');     // Ensure hidden state
      } else {
        // Open Sidebar
        sidebar.classList.add('md:ml-0');    // Restore desktop visibility
        sidebar.classList.add('-ml-64');     // Keep base hidden state (optional, essentially resetting to default)
      }
    }

    // Update Icons based on visibility state (Checked after toggle)
    // We check visibility based on the resulting classes
    const isNowHidden = sidebar.classList.contains('-ml-64') && !sidebar.classList.contains('md:ml-0');
    // Note: checking isNowHidden is tricky because on mobile !md:ml-0 is always true. 
    // effectively: visible if (mobile && no -ml-64) OR (desktop && md:ml-0)

    const isVisible = (!sidebar.classList.contains('-ml-64')) || (sidebar.classList.contains('md:ml-0'));

    const iconLeft = `
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M11 17l-5-5m0 0l5-5m-5 5h12" />
      </svg>
    `;
    const iconRight = `
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M13 17l5-5m0 0l-5-5m5 5H6" />
      </svg>
    `;

    if (sidebarToggleDesktop) {
      sidebarToggleDesktop.innerHTML = isVisible ? iconLeft : iconRight;
    }
    // Mobile menu icon logic usually remains just a hamburger or close X
    if (sidebarToggle && isMobile) {
      sidebarToggle.innerHTML = `
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="${isVisible ? 'M6 18L18 6M6 6l12 12' : 'M4 6h16M4 12h16M4 18h16'}" />
          </svg>
       `;
    }
  }

  // Add event listeners for sidebar toggle
  if (sidebarToggle) {
    sidebarToggle.addEventListener('click', toggleSidebar);
  }

  if (sidebarToggleDesktop) {
    sidebarToggleDesktop.addEventListener('click', toggleSidebar);
  }
</script>