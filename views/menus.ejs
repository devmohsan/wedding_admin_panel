<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lezzetli Admin | Menus</title>
  <link rel="stylesheet" href="/css/output.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body class="bg-gray-50">
  <div class="flex h-screen overflow-hidden">
    <%- include('partials/sidebar') %>

      <div class="relative flex flex-col flex-1 overflow-x-hidden overflow-y-auto">
        <%- include('partials/header') %>

          <main class="flex-1 p-6">
            <div class="max-w-7xl mx-auto">
              <!-- Page Header -->
              <div class="mb-8">
                <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
                  <div>
                    <h1 class="text-2xl font-bold text-gray-800">Menu Management</h1>
                    <p class="text-gray-600 mt-1">View and manage all menus</p>
                  </div>
                  <a href="/add"
                    class="inline-flex items-center justify-center px-5 py-2.5 bg-gradient-to-r from-[#2B588D] to-[#5FA8A1] text-white font-medium rounded-lg hover:opacity-90 transition-all duration-200 shadow-md hover:shadow-lg">
                    <i class="fas fa-plus mr-2"></i> Create New Menu
                  </a>
                </div>

                <!-- Stats Cards -->
                <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mt-6">
                  <div class="bg-white rounded-xl p-4 shadow border border-gray-100">
                    <div class="flex items-center">
                      <div class="p-2 rounded-lg bg-blue-50 text-blue-600 mr-3">
                        <i class="fas fa-utensils"></i>
                      </div>
                      <div>
                        <p class="text-sm text-gray-500">Total Menus</p>
                        <p class="text-xl font-semibold text-gray-800">
                          <%= menus.length %>
                        </p>
                      </div>
                    </div>
                  </div>

                  <div class="bg-white rounded-xl p-4 shadow border border-gray-100">
                    <div class="flex items-center">
                      <div class="p-2 rounded-lg bg-green-50 text-green-600 mr-3">
                        <i class="fas fa-check-circle"></i>
                      </div>
                      <div>
                        <p class="text-sm text-gray-500">Active Menus</p>
                        <p class="text-xl font-semibold text-gray-800">
                          <%= menus.filter(m=> m.is_active).length %>
                        </p>
                      </div>
                    </div>
                  </div>

                  <div class="bg-white rounded-xl p-4 shadow border border-gray-100">
                    <div class="flex items-center">
                      <div class="p-2 rounded-lg bg-purple-50 text-purple-600 mr-3">
                        <i class="fas fa-utensil-spoon"></i>
                      </div>
                      <div>
                        <p class="text-sm text-gray-500">Lunch Menus</p>
                        <p class="text-xl font-semibold text-gray-800">
                          <%= menus.filter(m=> m.mealType === 'lunch').length %>
                        </p>
                      </div>
                    </div>
                  </div>

                  <div class="bg-white rounded-xl p-4 shadow border border-gray-100">
                    <div class="flex items-center">
                      <div class="p-2 rounded-lg bg-orange-50 text-orange-600 mr-3">
                        <i class="fas fa-moon"></i>
                      </div>
                      <div>
                        <p class="text-sm text-gray-500">Dinner Menus</p>
                        <p class="text-xl font-semibold text-gray-800">
                          <%= menus.filter(m=> m.mealType === 'dinner').length %>
                        </p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Main Table Card -->
              <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden">
                <!-- Table Header -->
                <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
                  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
                    <h2 class="text-lg font-semibold text-gray-800">All Menus</h2>
                    <div class="flex items-center space-x-2 mt-2 sm:mt-0">
                      <div class="relative">
                        <input type="text" placeholder="Search menus..."
                          class="pl-9 pr-4 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-[#66BE6E] focus:border-transparent w-full sm:w-64"
                          id="searchInput">
                        <i class="fas fa-search absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                      </div>
                      <select
                        class="border border-gray-300 rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-[#66BE6E] focus:border-transparent"
                        id="statusFilter">
                        <option value="">All Status</option>
                        <option value="active">Active Only</option>
                        <option value="inactive">Inactive Only</option>
                      </select>
                    </div>
                  </div>
                </div>

                <!-- Table Content -->
                <% if (menus.length===0) { %>
                  <div class="p-12 text-center">
                    <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-gray-100 mb-4">
                      <i class="fas fa-utensils text-3xl text-gray-400"></i>
                    </div>
                    <h3 class="text-lg font-medium text-gray-700 mb-2">No menus found</h3>
                    <p class="text-gray-500 mb-6">Get started by creating your first menu</p>
                    <a href="/addtonepack"
                      class="inline-flex items-center px-5 py-2.5 bg-gradient-to-r from-[#66BE6E] to-[#97E8AF] text-white font-medium rounded-lg hover:opacity-90 transition-all duration-200">
                      <i class="fas fa-plus mr-2"></i> Create Menu
                    </a>
                  </div>
                  <% } else { %>

                    <!-- Desktop Table -->
                    <div class="overflow-x-auto hidden md:block">
                      <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                          <tr>
                            <th scope="col"
                              class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                              #
                            </th>
                            <% if (admin.role !== 'company') { %>
                            <th scope="col"
                              class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                              Company
                            </th>
                            <% } %>
                            <th scope="col"
                              class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                              Meal
                            </th>
                            <th scope="col"
                              class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                              Type
                            </th>
                            <th scope="col"
                              class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                              Status
                            </th>
                            <th scope="col"
                              class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                              Schedule
                            </th>
                            <th scope="col"
                              class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                              Actions
                            </th>
                          </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                          <% const itemsPerPage=10; const currentPage=parseInt(query.page) || 1; const
                            startIndex=(currentPage - 1) * itemsPerPage; const endIndex=Math.min(startIndex +
                            itemsPerPage, menus.length); const paginatedItems=menus.slice(startIndex, endIndex);
                            paginatedItems.forEach((menu, index)=> {
                            const menuDate = menu.date
                            ? new Date(menu.date).toLocaleDateString()
                            : null;

                            const cutoffDate = menu.cutoff_time



                            %>
                            <tr class="hover:bg-gray-50 transition-colors duration-150">
                              <!-- Serial Number -->
                              <td class="px-6 py-4 whitespace-nowrap">
                                <span
                                  class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-gray-100 text-gray-600 text-sm font-medium">
                                  <%= startIndex + index + 1 %>
                                </span>
                              </td>

                              <!-- Menu Details -->
                              <% if ( admin.role !== 'company') { %>
                                <td class="px-6 py-4">
                                  <div class="flex items-center">
                                    <div
                                      class="flex-shrink-0 h-10 w-10 rounded-lg bg-gradient-to-br from-[#66BE6E]/10 to-[#97E8AF]/10 flex items-center justify-center mr-3">
                                      <i class="fas fa-utensils text-[#66BE6E]"></i>
                                    </div>
                                    <div>
                                      <div class="text-sm font-semibold text-gray-900">
                                        <%= menu.company?.name || "Unknown Company" %>
                                      </div>

                                      <div class="text-xs text-gray-500 mt-0.5">
                                        <i class="fas fa-building mr-1"></i>
                                        <%= menu.company?.email || "Unknown Company"  %>
                                      </div>

                                    </div>
                                  </div>
                                </td>
                                <% } %>
                                  <!-- Meal & Items -->
                                  <td class="px-6 py-4">
                                    <div class="space-y-1">
                                      <span
                                        class="px-2.5 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-purple-50 text-purple-700 border border-purple-100">
                                        <i
                                          class="fas fa-<%= menu.mealType === 'breakfast' ? 'sun' : menu.mealType === 'lunch' ? 'sun' : 'moon' %> mr-1"></i>
                                        <%= menu.mealType || "lunch" %>
                                      </span>
                                      <% if (menu.menu_items && menu.menu_items.length> 0) { %>
                                        <div class="text-xs text-gray-600">
                                          <i class="fas fa-list-ul mr-1"></i>
                                          <%= menu.menu_items.length %> items
                                        </div>
                                        <% } %>
                                    </div>
                                  </td>

                                  <!-- Type -->
                                  <td class="px-6 py-4 whitespace-nowrap">
                                    <span
                                      class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-50 text-blue-700 border border-blue-100">
                                      <%= menu.type || "daily" %>
                                    </span>
                                  </td>


                                  <!-- Status -->
                                  <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex flex-col space-y-1">
                                      <span
                                        class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium <%= menu.is_active ? 'bg-green-100 text-green-800 border border-green-200' : 'bg-red-100 text-red-800 border border-red-200' %> w-fit">
                                        <% if (menu.is_active) { %>
                                          <span class="w-2 h-2 bg-green-500 rounded-full mr-1.5"></span>
                                          <% } else { %>
                                            <span class="w-2 h-2 bg-red-500 rounded-full mr-1.5"></span>
                                            <% } %>
                                              <%= menu.is_active ? 'Active' : 'Inactive' %>
                                      </span>
                                    </div>
                                  </td>

                                  <!-- Schedule -->
                                  <td class="px-6 py-4">
                                    <div class="space-y-1">
                                      <% if (menuDate) { %>
                                        <div class="text-sm text-gray-900">
                                          <i class="fas fa-calendar-day text-[#66BE6E] mr-1.5"></i>
                                          <%= menuDate %>
                                        </div>
                                        <% } %>
                                          <% if (cutoffDate) { %>
                                            <div class="text-xs text-gray-600">
                                              <i class="fas fa-clock text-orange-500 mr-1.5"></i>
                                              Cutoff: <%= cutoffDate %>
                                            </div>
                                            <% } %>
                                    </div>
                                  </td>

                                  <!-- Actions -->
                                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                    <div class="flex items-center justify-end space-x-2">
                                      <a href="/edit/<%= menu.id %>"
                                        class="inline-flex items-center p-2 rounded-lg text-[#66BE6E] hover:bg-[#66BE6E]/10 transition-colors duration-200"
                                        title="Edit Menu">
                                        <i class="fas fa-edit"></i>
                                      </a>
                                      <button onclick="viewMenuDetails('<%= menu.id %>')"
                                        class="inline-flex items-center p-2 rounded-lg text-blue-600 hover:bg-blue-50 transition-colors duration-200"
                                        title="View Details">
                                        <i class="fas fa-eye"></i>
                                      </button>
                                      <button onclick="deleteMenu('<%= menu.id %>')"
                                        class="inline-flex items-center p-2 rounded-lg text-red-600 hover:bg-red-50 transition-colors duration-200"
                                        title="Delete Menu">
                                        <i class="fas fa-trash"></i>
                                      </button>
                                    </div>
                                  </td>
                            </tr>
                            <% }) %>
                        </tbody>
                      </table>
                    </div>

                    <!-- Mobile Cards View -->
                    <div class="md:hidden space-y-4 p-4">
                      <% paginatedItems.forEach((menu, index)=> {
                        const menuDate = menu.date
                        ? new Date(menu.date).toLocaleDateString()
                        : null;

                        const cutoffDate = menu.cutoff_time
                        ? new Date(menu.cutoff_time).toLocaleTimeString([], {
                        hour: '2-digit',
                        minute: '2-digit',
                        })
                        : null;
                        %>
                        <div class="bg-white border border-gray-200 rounded-xl p-4 shadow-sm">
                          <div class="flex items-start justify-between mb-3">
                            <div class="flex items-center">
                              <div
                                class="flex-shrink-0 h-10 w-10 rounded-lg bg-gradient-to-br from-[#66BE6E]/10 to-[#97E8AF]/10 flex items-center justify-center mr-3">
                                <i class="fas fa-utensils text-[#66BE6E]"></i>
                              </div>
                              <div>
                                <div class="font-semibold text-gray-900 text-sm">
                                  <%= menu.id %>
                                </div>
                                <div class="flex items-center space-x-2 mt-1">
                                  <span class="px-2 py-0.5 text-xs rounded-full bg-blue-50 text-blue-700">
                                    <%= menu.type || "daily" %>
                                  </span>
                                  <span class="px-2 py-0.5 text-xs rounded-full bg-purple-50 text-purple-700">
                                    <%= menu.mealType || "lunch" %>
                                  </span>
                                </div>
                              </div>
                            </div>
                            <span
                              class="px-2.5 py-0.5 rounded-full text-xs font-medium <%= menu.is_active ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                              <%= menu.is_active ? 'Active' : 'Inactive' %>
                            </span>
                          </div>

                          <div class="grid grid-cols-2 gap-3 text-sm mb-4">
                            <% if (menuDate) { %>
                              <div class="text-gray-600">
                                <i class="fas fa-calendar-day text-[#66BE6E] mr-1"></i>
                                <%= menuDate %>
                              </div>
                              <% } %>
                                <% if (cutoffDate) { %>
                                  <div class="text-gray-600">
                                    <i class="fas fa-clock text-orange-500 mr-1"></i>
                                    <%= cutoffDate %>
                                  </div>
                                  <% } %>
                                    <% if (menu.menu_items && menu.menu_items.length> 0) { %>
                                      <div class="text-gray-600">
                                        <i class="fas fa-list-ul mr-1"></i>
                                        <%= menu.menu_items.length %> items
                                      </div>
                                      <% } %>
                          </div>

                          <div class="flex items-center justify-between pt-3 border-t border-gray-100">
                            <% if (menu.companyId) { %>
                              <div class="text-xs text-gray-500">
                                <i class="fas fa-building mr-1"></i>
                                <%= menu.companyId %>
                              </div>
                              <% } %>
                                <div class="flex items-center space-x-2">
                                  <a href="/menus/edit/<%= menu.id %>"
                                    class="p-1.5 rounded-lg text-[#66BE6E] hover:bg-[#66BE6E]/10">
                                    <i class="fas fa-edit"></i>
                                  </a>
                                  <button onclick="viewMenuDetails('<%= menu.id %>')"
                                    class="p-1.5 rounded-lg text-blue-600 hover:bg-blue-50">
                                    <i class="fas fa-eye"></i>
                                  </button>
                                  <button onclick="deleteMenu('<%= menu.id %>')"
                                    class="p-1.5 rounded-lg text-red-600 hover:bg-red-50">
                                    <i class="fas fa-trash"></i>
                                  </button>
                                </div>
                          </div>
                        </div>
                        <% }) %>
                    </div>

                    <!-- Pagination -->
                    <div class="bg-white px-4 py-4 border-t border-gray-200 sm:px-6">
                      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
                        <div class="mb-4 sm:mb-0">
                          <p class="text-sm text-gray-700">
                            Showing <span class="font-medium">
                              <%= startIndex + 1 %>
                            </span> to
                            <span class="font-medium">
                              <%= endIndex %>
                            </span> of
                            <span class="font-medium">
                              <%= menus.length %>
                            </span> menus
                          </p>
                        </div>

                        <div class="flex items-center">
                          <% const totalPages=Math.ceil(menus.length / itemsPerPage); const maxVisiblePages=5; let
                            startPage=Math.max(1, currentPage - Math.floor(maxVisiblePages / 2)); let
                            endPage=Math.min(totalPages, startPage + maxVisiblePages - 1); if (endPage - startPage + 1 <
                            maxVisiblePages) { startPage=Math.max(1, endPage - maxVisiblePages + 1); } %>

                            <nav class="relative z-0 inline-flex rounded-lg shadow-sm -space-x-px"
                              aria-label="Pagination">
                              <% if (currentPage> 1) { %>
                                <a href="/menus?page=<%= currentPage - 1 %>"
                                  class="relative inline-flex items-center px-3 py-2 rounded-l-lg border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                                  <i class="fas fa-chevron-left"></i>
                                </a>
                                <% } %>

                                  <% for (let i=startPage; i <=endPage; i++) { %>
                                    <a href="/menus?page=<%= i %>"
                                      class="relative inline-flex items-center px-4 py-2 border text-sm font-medium <%= i === currentPage ? 'z-10 bg-[#2B588D] border-[#2B588D] text-white' : 'bg-white border-gray-300 text-gray-500 hover:bg-gray-50' %>">
                                      <%= i %>
                                    </a>
                                    <% } %>

                                      <% if (currentPage < totalPages) { %>
                                        <a href="/menus?page=<%= currentPage + 1 %>"
                                          class="relative inline-flex items-center px-3 py-2 rounded-r-lg border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                                          <i class="fas fa-chevron-right"></i>
                                        </a>
                                        <% } %>
                            </nav>
                        </div>
                      </div>
                    </div>
                    <% } %>
              </div>
            </div>
          </main>
      </div>
  </div>

  <!-- Modal for Menu Details -->
  <div id="menuDetailsModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50 hidden">
    <div class="relative top-10 mx-auto p-4 border w-full max-w-2xl shadow-lg rounded-xl bg-white">
      <div class="flex justify-between items-center pb-3 border-b">
        <h3 class="text-xl font-semibold text-gray-800">Menu Details</h3>
        <button onclick="closeModal()" class="text-gray-400 hover:text-gray-600">
          <i class="fas fa-times text-xl"></i>
        </button>
      </div>
      <div id="modalContent" class="py-4">
        <!-- Content will be loaded via JavaScript -->
      </div>
      <div class="flex justify-end pt-4 border-t">
        <button onclick="closeModal()" class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 mr-2">
          Close
        </button>
        <button id="editMenuBtn" class="px-4 py-2 bg-[#66BE6E] text-white rounded-lg hover:bg-[#55AE5E]">
          <i class="fas fa-edit mr-2"></i> Edit Menu
        </button>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
    // Delete Menu Function
    function deleteMenu(menuId) {
      Swal.fire({
        title: 'Delete Menu?',
        html: `<div class="text-left">
                <p class="mb-2">This action will permanently delete the menu:</p>
                <div class="bg-red-50 border border-red-200 rounded-lg p-3 mb-4">
                  <code class="text-sm text-red-700">${menuId}</code>
                </div>
                <p class="text-sm text-gray-600">This cannot be undone.</p>
              </div>`,
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#66BE6E',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, delete it',
        cancelButtonText: 'Cancel',
        reverseButtons: true,
        focusCancel: true,
        customClass: {
          popup: 'rounded-xl',
          confirmButton: 'rounded-lg px-5',
          cancelButton: 'rounded-lg px-5'
        }
      }).then((result) => {
        if (result.isConfirmed) {
          // Create form for deletion
          const form = document.createElement('form');
          form.method = 'POST';
          form.action = `/menus/${menuId}?_method=DELETE`;

          // Add CSRF token if needed
          // const csrfInput = document.createElement('input');
          // csrfInput.type = 'hidden';
          // csrfInput.name = '_csrf';
          // form.appendChild(csrfInput);

          document.body.appendChild(form);
          form.submit();
        }
      });
    }

    // View Menu Details Modal
    function viewMenuDetails(menuId) {
      // Find the menu data
      const menu = <%= JSON.stringify(menus) %>.find(m => m.id === menuId);
      if (!menu) return;

      const modal = document.getElementById('menuDetailsModal');
      const content = document.getElementById('modalContent');
      const editBtn = document.getElementById('editMenuBtn');

      // Format dates
      const menuDate = menu.date ? new Date(menu.date) : null;
      const cutoffDate = menu.cutoff_time ? new Date(menu.cutoff_time) : null;

      // Build modal content
      content.innerHTML = `
        <div class="space-y-6">
          <!-- Header -->
          <div class="flex items-start justify-between">
            <div>
              <h4 class="text-lg font-semibold text-gray-800">${menu.id}</h4>
              ${menu.companyId ? `<p class="text-gray-600 mt-1"><i class="fas fa-building mr-2"></i>${menu.companyId}</p>` : ''}
            </div>
            <div class="flex items-center space-x-2">
              <span class="px-3 py-1 text-sm rounded-full ${menu.is_active ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800'}">
                ${menu.is_active ? 'Active' : 'Inactive'}
              </span>
            </div>
          </div>
          
          <!-- Details Grid -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="space-y-2">
              <div class="text-sm text-gray-500">Menu Type</div>
              <div class="flex items-center">
                <span class="px-2.5 py-1 text-sm rounded-full bg-blue-50 text-blue-700">
                  ${menu.type || 'daily'}
                </span>
              </div>
            </div>
            
            <div class="space-y-2">
              <div class="text-sm text-gray-500">Meal Type</div>
              <div class="flex items-center">
                <span class="px-2.5 py-1 text-sm rounded-full bg-purple-50 text-purple-700">
                  <i class="fas fa-${menu.mealType === 'breakfast' ? 'sun' : menu.mealType === 'lunch' ? 'sun' : 'moon'} mr-1"></i>
                  ${menu.mealType || 'lunch'}
                </span>
              </div>
            </div>
            
            ${menuDate ? `
            <div class="space-y-2">
              <div class="text-sm text-gray-500">Menu Date</div>
              <div class="text-gray-800">
                <i class="fas fa-calendar-day text-[#66BE6E] mr-2"></i>
                ${menuDate.toLocaleDateString()}
              </div>
            </div>
            ` : ''}
            
            ${cutoffDate ? `
            <div class="space-y-2">
              <div class="text-sm text-gray-500">Cutoff Time</div>
              <div class="text-gray-800">
                <i class="fas fa-clock text-orange-500 mr-2"></i>
